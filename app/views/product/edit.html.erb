<h1>Edit Product Detail</h1>

<%= form_for @product, :url =>{:action => "update", :id =>@product} do |f| %>

<p>Name: <%= f.text_field 'name' %></p>
<p>Price: <%= f.text_field  'price' %></p>
<p>Description<br/>

<%= f.text_area 'description' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>
