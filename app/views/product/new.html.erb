<h1>Add new book</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "product_name">Name</label>:

<%= text_field 'product', 'title' %></p>
<p><label for = "product_price">Price</label>:

<%= text_field 'books', 'price' %></p>
<p><label for = "book_subject_id">Subject</label>:

<%= collection_select(:products, :subject_id, @subjects, :id, :name, prompt: true) %></p>
<p><label for = "product_description">Description</label><br/>

<%= text_area 'products', 'description' %></p>
<%= submit_tag "Create" %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
